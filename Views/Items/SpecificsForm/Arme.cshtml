@model KnapSack.Models.Arme

@{
    var db = new KnapSack.Models.KnapSackDbEntities();
    ViewBag.selectListArme = KnapSack.Models.SelectListItemConverter<KnapSack.Models.TypesArme>.Convert(db.TypesArmes.ToList());
}


<div class="form-group">
    @Html.HiddenFor(m => m.idItem, htmlAttributes: new { @Value = 0 })
</div>

<div class="form-group">
    @Html.LabelFor(m => m.efficacite, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(m => m.efficacite, new { htmlAttributes = new { @class = "form-control", @Value = 1 } })
        @Html.ValidationMessageFor(m => m.efficacite, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.type, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Helpers.SelectList("type", ViewBag.selectListArme, 1)
        @Html.ValidationMessageFor(m => m.type, "", new { @class = "text-danger" })
    </div>
</div>
