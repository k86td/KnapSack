@model KnapSack.Models.Armure

<div class="form-group">
    @Html.LabelFor(m => m.matiere, "Matière", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(m => m.matiere, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(m => m.matiere, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(m => m.taille, "Taille", htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.EditorFor(m => m.taille, new { htmlAttributes = new { @class = "form-control", @Value = 1 } })
        @Html.ValidationMessageFor(m => m.taille, "", new { @class = "text-danger" })
    </div>
</div>